<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mainbackground">

    <ImageView
        android:id="@+id/image_sura_item"
        android:layout_width="388dp"
        android:layout_height="362dp"
        android:background="@drawable/sura_item_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sura_tv"
        tools:text="سورةالفاتحة"
        android:textStyle="bold"
        android:textSize="31sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/image_sura_item"
        app:layout_constraintEnd_toEndOf="@id/image_sura_item"
        app:layout_constraintTop_toTopOf="@id/image_sura_item"
        app:layout_constraintBottom_toBottomOf="@id/image_sura_item"
        android:layout_margin="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>